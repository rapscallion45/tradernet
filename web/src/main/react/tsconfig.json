{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts", "eslint.config.mjs", ".storybook/**/*", "test-runner-jest.config.ts"]
}
